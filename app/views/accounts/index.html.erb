<table class="table table-striped">
  <tr>
    <th>Descrição</th>
    <th>Saldo</th>
    <th></th>
  </tr>
  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.description %></td>
      <td><%= number_to_currency account.balance %></td>
      <td>
        <%= link_to '[editar]', edit_account_path(account) %>
        <%= link_to '[x]', account, method: :delete, confirm: "Tem certeza que deseja apagar a conta #{account.description}?" %>
      </td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Nova conta', new_account_path, class: 'btn' %>
</p>